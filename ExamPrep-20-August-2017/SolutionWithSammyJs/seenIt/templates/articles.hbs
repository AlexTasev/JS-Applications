<article class="post">
    <div class="col rank">
        <span>{{rank}}</span>
    </div>
    <div class="col thumbnail">
        <a href="{{url}}">
            <img src="{{imageUrl}}">
        </a>
    </div>
    <div class="post-content">
        <div class="title">
            <a href="{{url}}">
               {{title}}
            </a>
        </div>
        <div class="details">
            <div class="info">
                submitted {{time}} ago by {{author}}
            </div>
           {{> links}}
        </div>
    </div>
</article>